- model_class = JokeContent
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:like_count)
      %th= model_class.human_attribute_name(:dislike_count)

      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @joke_contents.each do |joke_content|
      %tr
        %td= link_to joke_content.id, joke_content_path(joke_content)
        %td= joke_content.title
        %td= joke_content.content
        %td= joke_content.like_count
        %td= joke_content.dislike_count
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_joke_content_path(joke_content), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), joke_content_path(joke_content), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_joke_content_path, :class => 'btn btn-primary'
