- model_class = JokeContent
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @joke_content.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @joke_content.content


= link_to t('.back', :default => t("helpers.links.back")), joke_contents_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_joke_content_path(@joke_content), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), joke_content_path(@joke_content), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
